# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5789
DATABASE_NAME=daer_novel
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d
BETTER_AUTH_SECRET=your_better_auth_secret_key

# OAuth Providers
# GitHub OAuth: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# AI Provider Configuration
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# Claude (Anthropic)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# DeepSeek
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Tencent COS (Object Storage)
COS_SECRET_ID=your_tencent_cos_secret_id
COS_SECRET_KEY=your_tencent_cos_secret_key
COS_BUCKET=your-bucket-name
COS_REGION=ap-guangzhou

# Application Configuration
BACKEND_PORT=8002
FRONTEND_PORT=8001
NODE_ENV=development

# CORS
# Cors (production example: https://novel.daerai.com)
CORS_ORIGIN=http://localhost:8001,https://novel.daerai.com

# Authentication Base URL (MUST be set in production)
# Example: https://novel.daerai.com/api/auth
AUTH_BASE_URL=http://localhost:8002/api/auth

# LinuxDo OAuth
LINUXDO_CLIENT_ID=
LINUXDO_CLIENT_SECRET=

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
